{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",

    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": [
    "src",
    ".storybook",
    ".husky/utils/jest.d.ts",
    ".husky/utils/setupTests.ts",
    ".husky/utils/types.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
